<div class="form-group" style="width: 800px; height: 800px; margin: 0 auto; margin-top: 50px; border-radius: 10px; border-radius: 05px;">
    <h1>&Oacute;rdenes de compra</h1>
    <br>
    <table id="table" class="display table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>No. Factura</th>
                <th>Fecha</th>
                <th>Vendedor</th>
                <th>Total</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <%@all_pch_ord.each do |x|%>
            <tr>
                <td><%=x.bill_number%></td>
                <td><%=x.date%></td>
                <td><%=x.vendor_name%></td>
                <td><%=x.total%></td>
                <td>
                    <%= link_to controller: "purchase_orders", action: "edit", id:x.id do %>
                        <i class="far fa-edit fa-2x"></i>
                    <% end %>
                </td>
                <td>
                    <%= link_to controller: "purchase_orders", action: "delete", id:x.id, data: { confirm: '¿Estás seguro?' } do %>
                        <i class="far fa-trash-alt fa-2x"></i>
                    <% end %>
                </td>
            </tr>
            <%end%>
        </tbody>
        <tfoot>
            <tr>
                <th>No. Factura</th>
                <th>Fecha</th>
                <th>Vendedor</th>
                <th>Total</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </tfoot>
    </table>

    <%=form_for :purchase_order, url:'create' do |pch_ord|%>
        <%= pch_ord.hidden_field :bill_number, :value => @get_lastid_pch_ord + 1 %>
        <%= pch_ord.hidden_field :date, :value => Date.today %>
        <%= pch_ord.submit "Crea una nueva orden de compra", class: "btn btn-secondary" %>
    <%end%>
</div>